<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/NoAnimationStyle</item>
    </style>

    <style name="TransparentTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_enter_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_exit_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_enter_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_exit_anim</item>
    </style>

    <style name="WindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_exit_anim</item>
    </style>

    <style name="DoubleAnimation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fade_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_exit_anim</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_enter_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_exit_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_enter_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_exit_anim</item>
    </style>

    <style name="DoubleAnimationTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/DoubleAnimation</item>
    </style>

    <style name="ActivityAnimationTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="WindowAnimationTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
    </style>

    <style name="TransitionTheme" parent="AppTheme">
        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
        <!--        <item name="android:windowReturnTransition">@android:transition/slide_top</item>-->
        <!--        <item name="android:windowReenterTransition">@android:transition/slide_right</item>-->
    </style>

    <style name="NoAnimationStyle" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
